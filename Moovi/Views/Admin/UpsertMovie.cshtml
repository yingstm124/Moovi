@model UpsertMovieViewModel
@using Moovi.ViewModels

<div class="container">
    <div class="row my-4">
        <h1>Create Movie</h1>
        <a class="link-secondary" asp-action="Index">Back</a>
    </div>

    <div class="row">
        <form method="post" class="form-horizontal" enctype="multipart/form-data" asp-controller="Admin" asp-action="UpsertMovie">
            <div>
                <div class="form-group text-center">
                    <div style="min-height: 300px;">
                        <img id="frame" src="~/assets/blank-image.jpg" alt="blank" width="300" />
                    </div>
                    <div class="text-center">
                        <label for="formFile" class="form-label">Upload Movie Cover</label>
                    </div>
                    <div class="d-flex justify-content-center">
                        <div class="py-2">
                            <input asp-for="Formfile" id="formFile" name="Formfile" class="form-control" type="file" onchange="preview()" />
                        </div>
                        <div class="py-2">
                            <a onclick="clearImage()" class="btn btn-primary">Clear</a>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <div class="d-flex justify-content-center align-items-center">

                        <div class="p-2">
                            <label for="movie-title">Title</label>
                        </div>
                        <div class="p-2">
                            <input asp-for="Title" id="movie-title" class="form-control" placeholder="Title" name="Title" />
                        </div>
                    </div>

                    <div class="text-center">
                        @Html.ValidationSummary()
                    </div>

                    <div class="d-flex justify-content-end">
                        <div>
                            <button class="btn btn-primary" type="submit">Submit</button>
                        </div>
                    </div>
                </div>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    <script>
        function goBack() {
            window.history.back()
        }
        function preview() {
            var file = event.target.files[0];
            frame.src = URL.createObjectURL(file);
        }
        function clearImage() {
            document.getElementById('formFile').value = null;
            frame.src = "~/assets/blank-image.jpg";
        }


    </script>
}