@using Moovi.ViewModels
@model List<AdminMovieViewModel>
@{
    var adminMovies = Model ?? new List<AdminMovieViewModel>() { };
}
<div class="container">
    <div class="row">
        <h1>Admin</h1>
    </div>
    <div class="row">
        <div class="d-flex flex-row-reverse">
            <a asp-action="UpsertMovie" class="btn btn-primary">New Movie</a>
        </div>
    </div>
    <div class="row justify-content-center py-4">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Image</th>
                    <th scope="col">Title</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int index = 1;
                }
                @foreach (var movie in @adminMovies)
                {
                    <tr>
                        <th scope="row">@index</th>
                        <td>
                            @if (movie.FileName == null || movie.FilePath == null)
                            {
                                <img src="./assets/blank-image.jpg" width="50" height="50" alt="blank image" />
                            }
                            else
                            {
                                <img src="" width="50" height="50" alt="movie-cover" />
                            }
                        </td>
                        <td>@Html.DisplayFor(i => movie.Title)</td>
                        <td>
                            <a class="btn btn-light" asp-route-id="@movie.Id" asp-action="UpsertMovie">Edit</a>
                            <a class="btn btn-light" asp-route-id="@movie.Id" asp-action="DetailMovie">Detail</a>
                            <a class="btn btn-danger" asp-route-id="@movie.Id" asp-action="DeleteMovie">Del</a>
                        </td>
                    </tr>
                    index++;
                }
            </tbody>
        </table>
    </div>
</div>